bhau baherun ghe printf f;

bhau hai ahe x = "declared in global";


bhau lakshat thev print_global(){
    f("From print_global: %s\n",x);
}

bhau lakshat thev print_infunc(){
    bhau hai ahe x = "declared in function";
    f("From print_infunc: %s\n",x);
}

bhau lakshat thev print_inblock(){
    bhau hai ahe x = "declared in func scope";
    bhau jar(1){
        bhau hai ahe x = "declared in block scope";
        f("From print_inblock: %s\n",x);
    }
}

bhau lakshat thev print_access_from_outer_block(){
    bhau hai ahe x = "declard in outer block";
    bhau jar(1){
        f("Frome print_access_from_outer_block: %s\n",x);
    }
}


bhau lakshat thev print_nestblocks(){
    bhau hai ahe x = "block 1";
    bhau jar(1){
        bhau hai ahe x = "block 2";
        bhau jar(1){
            bhau hai ahe x = "block 3";
            f("From print_nestblocks, Block 3 : %s\n",x);
        }
        f("From print_nestblocks, Block 2 : %s\n",x);
    }
    f("From print_nestblocks, Block 1 : %s\n",x);
}

bhau lakshat thev print_funcvsblockscope(){
    bhau jar(1){
        bhau hai ahe x = "block scope";
        f("From print_funcvsblockscope, Block scope : %s\n",x);
    }
    bhau hai ahe x = "function scope";
    f("From print_funcvsblockscope,Function scope : %s\n",x);
}

bhau lakshat thev return_localvalue(){
    bhau hai ahe x = 1;
    bhau parat de x;
}

