bhau lakshat thev nested_conditions(n){
    bhau jar (n == 0){
        printf("Zero\n");
    }
    bhau nahitar(n < 0){
        printf("Negative\n");
    }
    bhau tar {
        printf("Positive\n");
        bhau jar (n > 100){
            printf("Very large\n");
        }
    }
}


bhau lakshat thev switch_demo(x){
    bhau chunav(x) {
        bhau nivad 1:
            printf("One\n");
        bhau nivad 2:
            printf("Two\n");
        bhau nivad 3:
            printf("Three\n");
        bhau rahudet:
            printf("Other\n");
    }
}


bhau lakshat thev nested_loops(){
    bhau hai ahe i = 0;
    bhau joparent(i < 5){
        bhau hai ahe j = 0;
        bhau joparent(j < 3){
            printf("%d ",i);
            printf("%d ",j);
            j = j + 1;
        }
        printf("\n");
        i = i + 1;
    }
}


bhau lakshat thev add_const(){
    bhau hai ahe a = 5;
    bhau hai ahe b = 10;
    bhau parat de a + b;
}


bhau lakshat thev counter_test(){
    bhau hai ahe counter = 0;
    bhau joparent(counter < 3){
        printf("Counting");
        printf(" %d ",counter);
        counter = counter + 1;
    }
    printf("\n");
    bhau parat de counter;
}


